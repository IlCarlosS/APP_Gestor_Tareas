<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ListaDeTareas" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/background</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/background</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/background</item>
        <!-- Text color. -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <!-- Button styles. -->
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- Button style -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/buttonBackground</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>

    <style name="Theme.ListaDeTareas" parent="Base.Theme.ListaDeTareas" />
</resources>